{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pip_requirements": {
    "enabled": false
  },
  "pip-compile": {
    "enabled": true,
    "fileMatch": [
      "requirements[^/]*\\.txt$"
    ]
  },
  "automerge": true,
  "schedule": [
    "every weekend"
  ],
  "automergeSchedule": [
    "on tuesday"
  ]
}